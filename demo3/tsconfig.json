{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "es2020",
    "target": "es2020",    
    "moduleDetection": "force",
    "allowJs": true,
    "paths": {
      "littlejsengine/*": ["./node_modules/littlejsengine/dist/*"]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
  }
}
